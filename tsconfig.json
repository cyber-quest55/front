{
  "compilerOptions": {
    "target": "esnext",
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@@/*": [
        "./src/.umi/*"
      ],
      "@@test/*": [
        "./src/.umi-test/*"
      ]
    },
  },
  "include": [
    "./**/*.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  
  "exclude": [
    "node_modules", 
  ]
}